{% haml %}
-# Pre-load logo
%img.hidden{:src => "#{asset('assets/images/crowdbound-logo-white.png')}"}/
%img.hidden{:src => "#{asset('assets/images/crowdbound-logo-blue.png')}"}/

%nav.navbar.navbar-fixed-top.navbar-fixed-top-transparent.primary-navbar.-transparent-nav
  .container

    -# Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "http://crowdbound.io"}
        %img#logo.img-responsive{:src => "#{asset('assets/images/crowdbound-logo-white.png')}"}/

    -# Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Features
            %span.caret </  span>
          %ul.dropdown-menu.dropdown-flat.-blue{:role => "menu"}
            %li
              %a{:href => "#"} Mobile App für Agents
            %li
              %a{:href => "#"} Desktop App für Kampagnen-Manager
            %li
              %a{:href => "#"} CRM-Schnittstellen
            %li.active
              %a{:href => "#"} REST-API
        %li
          %a{:href => "#"} Erfolgsgeschichten
        %li
          %a{:href => "#"} Call Agent werden
        %li
          %a{:href => "#"} API

      -# City-menu
      %ul.hidden-xs.hidden-sm.nav.navbar-nav.navbar-right

        -# New and logged-out users
        - if auth_check() == false
          -# Register / Login CTA
          .hidden-xs.hidden-sm.navbar-form.navbar-right
            %a{:href => "#{url('register')}"}
              %button.btn.primary-btn.-rounded.-blue.-sm.mt-3 Registrieren
          .hidden-xs.hidden-sm.navbar-form.navbar-right
            %a{:href => "#{url('login')}"}
              %button.btn.ghost-btn.-rounded.-white.-sm.mt-3
                %i.fa.fa-sign-in.mr-5
                Login

        -# Logged-in users
        - if auth_check()
          -# Direkt link to account Dashboard
          .hidden-xs.hidden-sm.navbar-form.navbar-right
            %a{:href => "#{url('login')}"}
              %button.btn.ghost-btn.-rounded.-white.-sm.mt-3.dropdown-toggle
                %i.fa.fa-user.mr-5
                #{auth_user().name}
