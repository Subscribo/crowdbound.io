            %span.caret </  span>
          %ul.dropdown-menu.dropdown-flat.-blue{:role => "menu"}
            %li
              %a{:href => "#"} Mobile App &mdash; Agents
            %li
              %a{:href => "#"} CRM-Schnittstellen
            %li.active
              %a{:href => "#"} REST-API
        %li
          %a{:href => "#"} Erfolgsgeschichten
        %li
          %a{:href => "#"} Call Agent werden
        %li
          %a{:href => "#"} API

      -# City-menu
      %ul.hidden-xs.hidden-sm.nav.navbar-nav.navbar-right{:role => "search"}

        -# Register / Login CTA
        .hidden-xs.hidden-sm.navbar-form.navbar-right
          %button.btn.primary-btn.-rounded.-blue.-sm.mt-3 Registrieren

        -# Register / Register CTA
        .hidden-xs.hidden-sm.navbar-form.navbar-right
          %button.btn.ghost-btn.-rounded.-white.-sm.mt-3 <i class="fa fa-sign-in mr-5"></i>  Login
